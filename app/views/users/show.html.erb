<% provide(:title, @user.firstname) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        Welcome <%= @user.firstname %>
      </h1>

    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.qualifications.any? %>
      <h3>Qualification (<%= @user.qualifications.count %>)</h3>
      <ol class="microposts">
        <%= render @qualifications %>
      </ol>
      <%= will_paginate @qualifications %>
    <% end %>
  </div>
</div>
