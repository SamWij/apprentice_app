<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="qualification_form">
        <%= render 'shared/qualification_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Profile</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>


  <div class="center jumbotron">
    <h1>Apprenticeships</h1>

    <h2>
      Create a profile and hunt for jobs!
    </h2>

    <%= link_to "Create a profile Now!",  signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
