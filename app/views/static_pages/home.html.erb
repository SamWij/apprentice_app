
<% if logged_in? %>
<div class="row">
<aside class="col-md-4">
  <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>

      <section class="qualification_form">
        <%= render 'shared/qualification_form' %>
      </section>

      <section class="license_form">
        <%= render 'shared/license_form' %>
      </section>

      <section class="license_form">
        <%= render 'shared/work_experience_form' %>
      </section>

</aside>

  <div class="col-md-8">
      <h3>Qualifications</h3>
      <%= render 'shared/feed' %>
    </div>
    <div class="col-md-8">
      <h3>Licenses</h3>
      <%= render 'shared/license' %>
    </div>
    <div class="col-md-8">
      <h3>Work Experience</h3>
      <%= render 'shared/work' %>
      </div>
  </div>

<% else %>


  <div class="center jumbotron">
    <h1>Apprenticeships</h1>

    <h2>
      Create a profile and hunt for jobs!
    </h2>

    <%= link_to "Create a profile Now!",  signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
